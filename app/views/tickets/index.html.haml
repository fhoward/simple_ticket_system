%h1 Tickets


.container
  .row
    .col
      = render 'import_form'
  .row
    .col
      .float-start.m-3
        %span.badge.px-5.text-bg-success
          = @ticket_new || 0
        %span.badge.px-5.text-bg-secondary
          = @ticket_pending || 0
        %span.badge.px-5.text-bg-primary
          = @ticket_resolved || 0
      = button_to "New ticket", new_ticket_path,method: :get,class: 'btn btn-primary float-end m-3'
      = button_to 'Download CSV', export_tickets_path(format: :csv),method: :get, class:'btn btn-secondary float-end m-3'
  .row
    .col
      #tickets
        %table.table.table-bordered.table-striped
          %thead
            %tr
              %th.text-center Requester Name
              %th.text-center Requester Email
              %th.text-center Subject
              %th.text-center Status
              %th.text-center Content
              %th.text-center Created At
          %tbody
            - @tickets.each do |ticket|
              = render ticket
-# = link_to "New ticket", new_ticket_path
